{
  "name": "webpack5-test",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.91chi.fun//https://github.com/ddzy/webpack5-test.git",
  "author": "n年级 <1766083035@qq.com>",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "serve": "cross-env NODE_ENV=development APP_ENV=development webpack serve --config ./webpack/development.config.js",
    "build": "cross-env NODE_ENV=production APP_ENV=development webpack --config ./webpack/lib.config.js",
    "build:pro": "cross-env NODE_ENV=production APP_ENV=production webpack --config ./webpack/production.config.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,vue,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "dart-sass": "^1.25.0",
    "html-webpack-plugin": "^5.5.0",
    "lint-staged": "^13.0.3",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
